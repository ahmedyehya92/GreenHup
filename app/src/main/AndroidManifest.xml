            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name="com.openet.greenhup.features.settings.SettingsActivity"></activity>
        <activity android:name="com.openet.greenhup.features.contact_us.ContactUsActivity" />
        <activity android:name="com.openet.greenhup.features.about.AboutActivity" />
        <activity android:name="com.openet.greenhup.features.pay.PayActivity" />
        <activity android:name="com.openet.greenhup.features.save_order.SaveOrderActivity" />
