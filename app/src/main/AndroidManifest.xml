<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.am_development.greenhup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
            android:name=".AfconApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".features.category_products.CategoryProductsActivity"></activity>
        <activity
                android:name=".features.package_details.PackageDetailsActivity"
                android:exported="true" />
        <activity android:name=".features.search.SearchActivity" />
        <activity android:name=".features.sign.SignActivity" />
        <activity android:name=".features.on_boarding.OnBoardingActivity" />
        <activity android:name=".features.service_details.ServiceDetailsActivity" />
        <activity android:name=".features.services.ServicesActivity" />
        <activity
                android:name=".features.categories_vendor.vendors.VendorsActivity"
                android:exported="true" />
        <activity
                android:name=".features.categories_vendor.CategoriesActivity"
                android:exported="true" />
        <activity android:name=".features.details.PlantDetailsActivity" />
        <activity android:name=".features.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.main.MainActivity" />
    </application>

</manifest>