<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.service_details.ServiceDetailsActivity">

    <com.github.florent37.arclayout.ArcLayout
            android:id="@+id/arcLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="5dp"
            app:arc_cropDirection="cropOutside"
            app:arc_height="50dp"
            app:arc_position="bottom"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/very_light_pink"
                android:scaleType="centerCrop"
                android:gravity="center_horizontal"
                >

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logo" />

        </LinearLayout>


    </com.github.florent37.arclayout.ArcLayout>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.17" />

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            <com.am_development.greenhup.customviews.CustomeFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:custom_font="@string/font_name_hkgrotesk_bold"
                    android:textColor="@color/charcoal_grey"
                    android:textSize="18sp"
                    android:text="Garden Design"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    />

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    >

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ex_gardening_ideas"
                        android:scaleType="centerCrop"
                        />

            </androidx.cardview.widget.CardView>

            <com.am_development.greenhup.customviews.CustomeFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:custom_font="@string/font_name_segoe_ui"
                    android:text="Custom designed four season container gardens are Catherine's
please fill in the form below"
                    android:textSize="16sp"
                    android:textColor="@color/brown_grey"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    >

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/check_selector"
                            />

                    <com.am_development.greenhup.customviews.CustomeFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:custom_font="@string/font_name_sfpro_display_regular"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="Indoor"
                            android:layout_marginStart="8dp"
                            />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginStart="64dp"
                        >

                    <ImageView
                            android:id="@+id/im_outdoor_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/check_selector"
                            />

                    <com.am_development.greenhup.customviews.CustomeFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:custom_font="@string/font_name_sfpro_display_regular"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="Outdoor"
                            android:layout_marginStart="8dp"
                            />

                </LinearLayout>

            </LinearLayout>




            <com.am_development.greenhup.customviews.CustomEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:custom_font="@string/font_name_sfpro_display_regular"
                    android:hint="Width"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    />

            <com.am_development.greenhup.customviews.CustomEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:custom_font="@string/font_name_sfpro_display_regular"
                    android:hint="Height"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    />

            <com.am_development.greenhup.customviews.CustomEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:custom_font="@string/font_name_sfpro_display_regular"
                    android:hint="Accessories List"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
                    />



        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>