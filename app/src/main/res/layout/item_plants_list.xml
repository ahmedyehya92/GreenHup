<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="190dp" android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="16dp"

        android:id="@+id/lout_main"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <com.openet.greenhup.customviews.CustomeFontTextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:alpha="0.5"
                android:text="INDOOR"
                android:textColor="@color/bluish_green"
                android:textSize="12sp"
                app:custom_font="@string/font_hkgrotesk_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <com.openet.greenhup.customviews.CustomeFontTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="ANGELICA"
                android:textColor="@color/charcoal_grey"
                android:textSize="13sp"
                app:custom_font="@string/font_hkgrotesk_semibold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/im_plant" />

        <com.openet.greenhup.customviews.CustomeFontTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400"
                android:textColor="@color/bluish_green"
                android:textSize="16sp"
                app:custom_font="@string/font_name_hkgrotesk_bold"
                app:layout_constraintStart_toStartOf="@+id/tv_position"
                app:layout_constraintTop_toBottomOf="@+id/tv_position" />

        <ImageView
                android:id="@+id/im_plant"
                android:layout_width="0dp"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>