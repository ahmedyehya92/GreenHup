<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lout_main"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >


    <LinearLayout
            android:id="@+id/lout_green"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:background="@drawable/shape_rectangle_green_radius_2_5_dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    <com.openet.greenhup.customviews.CustomeFontTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Gbit Plant"
            android:textSize="14sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            app:custom_font="@string/font_raleway_medium"
            app:layout_constraintBottom_toTopOf="@+id/tv_price"
            app:layout_constraintEnd_toEndOf="@+id/lout_green"
            app:layout_constraintStart_toStartOf="@+id/lout_green" />

    <ImageView
            android:id="@+id/im_plant"
            android:layout_width="150dp"
            android:layout_height="129dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_name"
            app:layout_constraintEnd_toEndOf="@+id/lout_green"
            app:layout_constraintStart_toStartOf="@+id/lout_green"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/test_plant" />

    <com.openet.greenhup.customviews.CustomeFontTextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="$88"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            app:custom_font="@string/font_raleway_medium"
            app:layout_constraintBottom_toBottomOf="@+id/lout_green"
            app:layout_constraintEnd_toEndOf="@+id/tv_name"
            app:layout_constraintStart_toStartOf="@+id/tv_name" />

</androidx.constraintlayout.widget.ConstraintLayout>