<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="200dp">

    <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/very_light_pink_two"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/arcLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


    </LinearLayout>

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/arcLayout2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout6"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ex_plant_png" />
    <com.github.florent37.arclayout.ArcLayout
            android:id="@+id/arcLayout2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:arc_cropDirection="cropInside"
            app:arc_height="40dp"
            app:arc_position="left"
            android:elevation="10dp"
            app:chainUseRtl="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b3e1a7"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:gravity="center_horizontal"
                    >

                <com.am_development.greenhup.customviews.CustomeFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="---- Get 40% off ---"
                        android:textSize="12sp"
                        android:textColor="@color/greyish_brown"
                        />

                <com.am_development.greenhup.customviews.CustomeFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:custom_font="@string/font_name_hkgrotesk_bold"
                        android:text="SPECIAL OFFERS"
                        android:textColor="@color/greyish_brown"
                        android:textSize="22sp"
                        />


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        >

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/shape_gradient_white_gray"
                            android:paddingHorizontal="5dp"
                            android:layout_weight="1"
                            >

                        <com.am_development.greenhup.customviews.CustomeFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:custom_font="@string/font_name_hkgrotesk_bold"
                                android:textColor="@color/mossy_green"
                                android:textSize="16sp"
                                android:text="17"
                                />

                        <com.am_development.greenhup.customviews.CustomeFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:custom_font="@string/font_name_sfpro_display_regular"
                                android:textColor="@color/mossy_green"
                                android:textSize="12sp"
                                android:text="Days"
                                />


                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/shape_gradient_white_gray"
                            android:paddingHorizontal="5dp"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            >

                        <com.am_development.greenhup.customviews.CustomeFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:custom_font="@string/font_name_hkgrotesk_bold"
                                android:textColor="@color/mossy_green"
                                android:textSize="16sp"
                                android:text="17"
                                />

                        <com.am_development.greenhup.customviews.CustomeFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:custom_font="@string/font_name_sfpro_display_regular"
                                android:textColor="@color/mossy_green"
                                android:textSize="12sp"
                                android:text="Days"
                                />


                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/shape_gradient_white_gray"
                            android:paddingHorizontal="5dp"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            >

                        <com.am_development.greenhup.customviews.CustomeFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:custom_font="@string/font_name_hkgrotesk_bold"
                                android:textColor="@color/mossy_green"
                                android:textSize="16sp"
                                android:text="17"
                                />

                        <com.am_development.greenhup.customviews.CustomeFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:custom_font="@string/font_name_sfpro_display_regular"
                                android:textColor="@color/mossy_green"
                                android:textSize="12sp"
                                android:text="Days"
                                />


                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/shape_gradient_white_gray"
                            android:paddingHorizontal="5dp"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            >

                        <com.am_development.greenhup.customviews.CustomeFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:custom_font="@string/font_name_hkgrotesk_bold"
                                android:textColor="@color/mossy_green"
                                android:textSize="16sp"
                                android:text="17"
                                />

                        <com.am_development.greenhup.customviews.CustomeFontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:custom_font="@string/font_name_sfpro_display_regular"
                                android:textColor="@color/mossy_green"
                                android:textSize="12sp"
                                android:text="Days"
                                />


                    </LinearLayout>

                </LinearLayout>

                <com.am_development.greenhup.customviews.CustomeFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:custom_font="@string/font_name_hkgrotesk_bold"
                        android:text="Product Name"
                        android:textColor="@color/greyish_brown"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        />

                <com.am_development.greenhup.customviews.CustomeFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:custom_font="@string/font_name_hkgrotesk_bold"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:maxLines="3"
                        android:gravity="center"
                        android:textColor="@color/greyish_brown"
                        android:textSize="8sp"
                        android:layout_marginTop="4dp"
                        />

                <com.am_development.greenhup.customviews.CustomeMaterialButtonFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:custom_font="@string/font_name_hkgrotesk_bold"
                        android:text="GET NOW"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/frog_green"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="5dp"
                        />


            </LinearLayout>


        </LinearLayout>

    </com.github.florent37.arclayout.ArcLayout>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            app:layout_constraintGuide_percent="0.35"
            />


</androidx.constraintlayout.widget.ConstraintLayout>